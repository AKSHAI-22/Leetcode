class Solution(object):
    def lengthOfLastWord(self, s):
        c=0
        if(len(s)==1):
            return 1
        
        else:
            s=s.strip()
            for i in range(len(s)-1,-1,-1):
                if(s[i].isspace()):
                    break
                c=c+1
        return c
        
